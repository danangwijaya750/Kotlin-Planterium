<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Switch
            android:text="Otomatis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            app:layout_constraintStart_toStartOf="@+id/button" android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/button"/>
    <Button
            android:text="Fedding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/button2" android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/button2"/>
    <Button
            android:text="Watering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="218dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>